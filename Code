#include <stdio.h>
#include <math.h>
int main(void)
{
  float a;
  float b;
  float c;
  float ans1;
  printf("Введите коэффициент A:");
  scanf("%f", &a);
  printf("\rВведите коэффициент B:");
  scanf("%f", &b);
  printf("\rВведите коэффициент C:");
  scanf("%f", &c);
  if (a == 0) 
  {
    if (b == 0) 
    {
      printf("\rУравнение не решаемо") ;
    }
    else
    {
      ans1 = -c/b;
      printf("\rУравнение линейное, одно решение = %f",ans1);
    }
  }
  else
  {
    float D;
    D = b*b - 4*a*c;
    if (D >= 0) 
    {
      float t;
      t = -b/(2*a);
      if (D == 0) 
      {
        printf("\rУравнение квадратное, 1 корень = %f", t);
      }
      else
      {
        float rD;
        float ans2;
        rD = sqrt(D)/(2*a);
        ans1 = t+rD;
        ans2 = t-rD;
        printf("\rУравнение квадратное, 2 корня = %f, %f", ans1, ans2);
      }
    }
    else
      printf("\r Уравнение квадратное, корней нет");
  }
}
